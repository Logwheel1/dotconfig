; ------ COLORS ------ ##colors




[colors]
background = #1d2021
background-alt = #282828
foreground = #fbf1c7
foreground-alt = #fbf1c7
red-alt = #fb4934
red = #cc241d
green = #b8bb26
yellow = #fabd2f
blue = #83a598
purple = #d3869b
aqua = #8ec07c



; other colors
primary = #ffb52a
secondary = #e60053
alert = #bd2c40




; ------ BAR1 ------ ##bar1




[bar/bar1]
;monitor = ${env:MONITOR:HDMI-1}
;width = 98%
height = 40
;offset-x = 1%
;offset-y = 1%
radius = 0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #ffffff

border-size = 0
border-color = ${colors.foreground}

padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-center = 0
module-margin-right = 0

; ---- FONTS ---- ##fonts

font-0 = CaskaydiaCove Nerd Font Mono:style=Regular
font-1 = Linux Libertine O:style=Regular
font-2 = Symbols Nerd Font:style=2048-em:size=12;1
font-3 = Symbols Nerd Font Mono:style=1000-em:size=40;7



; ---- MODULES POSITION ---- ##modpos

modules-left = rofi xwindow rightp
modules-center = left bspwm right
modules-right = leftb date powermenu

; ---- OTHER ----

;tray-position = right
;tray-padding = 2
;tray-background = #0063ff

wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize



; ---------- MODULES ----------- ##mods




; ------ XWINDOW ------- ##xwindow




[module/xwindow]
type = internal/xwindow
label = "%{T4}%{F#83a598}%{T1}%{F#fbf1c7}   %title:0:30:...%   "
label-background = ${colors.purple}
label-foreground = ${colors.foreground}



; ------ BSPWM ------ ##bspwm




[module/bspwm]
type = internal/bspwm

label-focused = 
label-focused-background = ${colors.aqua}
;label-focused-underline = ${colors.background}
;label-focused-overline = ${colors.background}
label-focused-padding = 2

label-occupied = 
label-occupied-background = ${colors.aqua}
;label-occupied-overline = ${colors.background}
;label-occupied-underline = ${colors.background}
label-occupied-padding = 2

label-urgent = 
label-urgent-background = ${colors.aqua}
;label-urgent-overline = ${colors.background}
;label-urgent-underline = ${colors.background}
label-urgent-padding = 2

label-empty = 
label-empty-background = ${colors.aqua}
label-empty-foreground = ${colors.foreground}
;label-empty-overline = ${colors.background}
;label-empty-underline = ${colors.background}
label-empty-padding = 2


; Separator in between workspaces
; label-separator = |




; ------ DATE ------ ##date





[module/date]
type = internal/date
interval = 5

;date =
;date-alt = " %Y-%m-%d"

time = " %I:%M %p "
;time-alt = %H:%M:%S

format-prefix = 
format-prefix-foreground = ${colors.foreground-alt}
;format-underline = ${colors.blue}

label = "%{T1}%time% %{T4}%{F#cc241d}"
label-font = 1
label-foreground = ${colors.foreground}
label-background = ${colors.blue}




; ------ PULSEAUDIO ------ ##audio





[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume> <bar-volume>
label-volume = VOL %percentage%%
label-volume-foreground = ${root.foreground}

label-muted = 🔇 muted
label-muted-foreground = #666

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}




; ------ ALSA ------ ##alsa



[module/alsa]
type = internal/alsa

format-volume = <label-volume> <bar-volume>
label-volume = VOL
label-volume-foreground = ${root.foreground}

format-muted-prefix = " "
format-muted-foreground = ${colors.foreground-alt}
label-muted = sound muted

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}



; ------ POWERMENU ------ ##power





[module/powermenu]
type = custom/text
content-foregound = ${colors.foreground}
content-background = ${colors.red}
content = "%{T3} %{F#fbf1c7}     "
click-left = "$HOME/.config/rofi/scripts/powermenu"




; ------ ROFI ------ ##rofi




[module/rofi]
type = custom/text
content-background = ${colors.blue}
content-foreground = ${colors.foreground}
content-padding = 1
click-left = "rofi -show drun"
content= "%{T3}     "





; ------ SEP ------ ##sep





[module/sep]
type = custom/text
content-background = ${colors.background}
content-foreground = ${colors.foreground}
;content-padding = 1
content= "|"




; ------ left ------ ##left
[module/left]
type = custom/text
content-background = ${colors.background}
content-foreground = ${colors.aqua}
content-padding = 0
content = "%{T4}"




; ------ right ------ ##right
[module/right]
type = custom/text
content-background = ${colors.background}
content-foreground = ${colors.aqua}
content-padding = 0
content = "%{T4}"




; ------ rightp ------ ##rightp
[module/rightp]
type = custom/text
content-background = ${colors.background}
content-foreground = ${colors.purple}
content-padding = 0
content = "%{T4}"




; ------ rightb ------ ##rightb
[module/rightb]
type = custom/text
content-background = ${colors.background}
content-foreground = ${colors.blue}
content-padding = 0
content = "%{T4}"




; ------ left ------ ##leftb
[module/leftb]
type = custom/text
content-background = ${colors.background}
content-foreground = ${colors.blue}
content-padding = 0
content = "%{T4}"





; -------- THE REST OF THE CONFIG --------




[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

